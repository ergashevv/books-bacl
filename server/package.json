{
  "name": "books-server",
  "version": "1.0.0",
  "description": "Backend server for books app",
  "main": "dist/api.js",
  "type": "commonjs",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=280 --optimize-for-size' tsc --project ../tsconfig.server.json",
