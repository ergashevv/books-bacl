{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./server/dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "incremental": false,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
